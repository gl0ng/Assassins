<h1>Defeat Player</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @player, :url => url_for(:controller => 'players', :action => 'vanquish') do |f| %>

      <%= f.label :passcode, "Enter Target's Passcode" %>
      <%= f.text_field :passcode, class: 'form-control' %>

      <%= f.submit "Defeat", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>