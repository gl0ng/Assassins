<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Nerf Tag", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "Players", assassins_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Games <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "All Games", games_path %></li>
              <li><%= link_to "My Games", games_path(:mode => "assassin_only") %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Create Game", new_game_path %>
              </li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_assassin_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>