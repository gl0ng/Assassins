<div class="jumbotron">
	<h1>All Players</h1>
	<table id="assassins">
	<thead>
	  <tr>
		  <th>Gravatar</th>
		  <th>Player Name</th>
		  <% if current_user.admin?  %>
			<th>Actions</th>
		  <% end %>
	  </tr>
	</thead>
	<tbody>
	  <% @assassins.each do |assassin| %>
	    <tr>
	      <td><%= gravatar_for assassin %></td>
		  <td><%= link_to assassin.name, assassin %></td>
		  <% if current_user.admin? %>
		    <td>
			<% if !current_user?(assassin) %>
	    	  <%= link_to "delete", assassin, method: :delete, data: { confirm: "You sure?" } %>
	    	  <% else %>	
	    	    None
	    	  <% end %>
	    	</td>
	      <% end %>
	    </tr>
	  <% end %>
	</tbody>
	</table>
</div>